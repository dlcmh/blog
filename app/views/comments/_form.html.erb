<%= form_with model: [@article, @article.comments.build] do |form| %>
  <div>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %><br>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
